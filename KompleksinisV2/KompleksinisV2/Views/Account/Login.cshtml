@model KompleksinisV2.Models.Employee
@{
    Layout = "~/Views/Shared/_Custom.cshtml";
}
<div class="container" style="margin-top: 5%;">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">Login</div>
            <div class="panel-body">

                <form asp-action="Login">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                    <div class="row">
                        <div class="form-group col-xs-12">

                            <label asp-for="Username" class="control-label"><span class="text-danger" style="margin-right:5px;">*</span>Username:</label>
                            <div class="input-group">
                                <input asp-for="Username" class="form-control" type="text" placeholder="Username" required />
                                <span class="input-group-btn">
                                    <label class="btn btn-primary"><span class="glyphicon glyphicon-user" aria-hidden="true"></label>
                                </span>
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">

                            <label asp-for="Password" class="control-label"><span class="text-danger" style="margin-right:5px;">*</span>Password:</label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password" required />
                                <span class="input-group-btn">
                                    <label class="btn btn-primary"><span class="glyphicon glyphicon-lock" aria-hidden="true"></label>
                                </span>
                                </span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="row">
                            <div class="form-group col-xs-4">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
