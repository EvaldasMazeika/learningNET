@using System.Security.Claims
@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString();

    if (controller == "Dashboard" || controller == "Account")
    {
        <ul class="nav flex-column">
            <li class="nav-item">
                <h1>Pagrindinis</h1><hr style="margin-bottom:5px !important; margin-top:5px !important; " />
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Dashboard" class="nav-link" asp-action="Index"><i class="fas fa-home"></i> Pagrindinis </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Dashboard" class="nav-link" asp-action="Employees"><i class="fas fa-users"></i> Darbuotojai</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Dashboard" class="nav-link" asp-action="Message"><i class="fas fa-comment"></i> Pranešimas</a>
            </li>

            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user-circle"></i> @User.Identities.First(u => u.IsAuthenticated && u.HasClaim(c => c.Type == ClaimTypes.Name)).FindFirst(ClaimTypes.Name).Value </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Edit"><i class="fa fa-fw fa-user"></i> Redaguoti paskyrą</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword"><i class="fa fa-fw fa-cog"></i> Pasikeisti slaptažodį</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa fa-fw fa-power-off"></i> Atsijungti</a>
                </div>
            </li>
        </ul>
    }
    else if (controller == "Sales")
    {
        <ul class="nav flex-column">
            <li class="nav-item">
                <h1>Pardavimai</h1><hr style="margin-bottom:5px !important; margin-top:5px !important; " />
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Sales" class="nav-link" asp-action="Index"><i class="fas fa-home"></i> Pagrindinis </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Sales" class="nav-link" asp-action="Orders"><i class="fas fa-briefcase"></i> Užsakymai</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Sales" class="nav-link" asp-action="Clients"><i class="fas fa-users"></i> Klientai</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Sales" class="nav-link" asp-action="Reports"><i class="fas fa-book"></i> Ataskaitos</a>
            </li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user-circle"></i> @User.Identities.First(u => u.IsAuthenticated && u.HasClaim(c => c.Type == ClaimTypes.Name)).FindFirst(ClaimTypes.Name).Value </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Edit"><i class="fa fa-fw fa-user"></i> Redaguoti paskyrą</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword"><i class="fa fa-fw fa-cog"></i> Pasikeisti slaptažodį</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa fa-fw fa-power-off"></i> Atsijungti</a>
                </div>
            </li>
        </ul>
    }

}
