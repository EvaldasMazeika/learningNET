@model IEnumerable<KompleksinisV2.Models.Client>
<h2>Klientai</h2>
<hr />
<a class="btn btn-info btn-lg" role="button" asp-action="NewClient">Pridėti naują klientą</a>
<hr />
<form asp-action="Clients" method="get">
    <div class="form-actions no-color">
        <p>
            Ieškoti pagal E-paštą: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Ieškoti" class="btn btn-default" />
        </p>
    </div>
</form>
<table class="table table-striped">
    <tr>
        <td><strong>Vardas Pavardė</strong></td>
        <td><strong><a asp-action="Clients" asp-route-sortOrder="@ViewData["mailSortParam"]">E-paštas</a></strong></td>
        <td><strong>Telefono numeris</strong></td>
        <td><strong>Adresas</strong></td>
        <td><strong>Nustatymai</strong></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
           <td>@item.Name @item.Surname</td>
            <td>@item.Email</td>
            <td>@item.PhoneNum</td>
            <td>@item.Adress</td>
            <td>
                <a class="btn btn-warning btn-xs" role="button" asp-action="EditClient" asp-route-id="@item.ID"><i class="glyphicon glyphicon-edit"></i></a>
                <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#DeleteModal" data-whatever="@item.ID"><i class="glyphicon glyphicon-trash"></i></button>
            </td>
        </tr>
    }
</table>

<!-- Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Pašalinimas Kliento</h4>
            </div>
            <div class="modal-body">
                <p>Ar tikrai norite pašalinti klientą iš sistemos?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ne</button>
                <button id="what" type="button" class="btn btn-primary">Taip</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#DeleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var recipient = button.data('whatever')

            var modal = $(this)

            $("#what").click(function (e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "/Sales/DeleteClient/" + recipient,
                    data: {
                        id: recipient, 
                    },
                    success: function (result) {
                        location.reload();
                    },
                    error: function (result) {
                    }
                });
            });
        })
    });

</script>